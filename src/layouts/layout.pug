doctype html
html.no-js(lang='en')
  head
    //- basic page needs
    meta(charset="utf-8")
    block head
    title #{title}
    meta(name='description', content= metaDescription)
    meta(name='author', content="Aran Bruce-Caddick")

    //- canonical
    link(rel="canonical", href="https://www.aranbc.com/")
      
    //- mobile specific metas
    meta(name='viewport', content='width=device-width, initial-scale=1')

    //- Google Analytics
    script(type="text/javascript").
