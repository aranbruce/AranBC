section#form
    .section__content
        .section__title.centre-text
            h5 Got an Interesting Project or Idea?
            h2 Get in Touch
        form#enquiryForm
            .form__wrapper
                input(type="text", name="NAME", aria-label="Name", placeholder="Name" required)
                input(type="email", name="EMAIL", aria-label="Email", placeholder="Email" required)
                input(type="text", name="SUBJECT", aria-label="Subject", placeholder="Subject" required)
                textarea(name="MESSAGE",placeholder="Message", aria-label="Message", required)
                button.button--primary#formButton(type="submit", value="Send") Send